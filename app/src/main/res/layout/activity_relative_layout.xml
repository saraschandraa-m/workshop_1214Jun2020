<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_setup_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="Setup Your Plan"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_settings_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setup_plan"
        android:layout_marginStart="10dp"
        android:text="You can change this anytime in the settings" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_settings_sub_text"
        android:layout_margin="10dp"
        android:background="@drawable/bg_crect_1">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pie_chart_img" />



        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_below="@+id/tv_settings"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/vw_settings_divider"
            android:background="#ffffff"/>


        <TextView
            android:layout_below="@+id/vw_settings_divider"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECOMMENDED"/>


    </RelativeLayout>

</RelativeLayout>